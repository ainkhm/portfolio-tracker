datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id        Int          @id @default(autoincrement())
  name      String
  industry  String
  investments Investment[]
}

model Investment {
  id             Int      @id @default(autoincrement())
  company        Company  @relation(fields: [companyId], references: [id])
  companyId      Int
  amountInvested Float
  valuation      Float
  date           DateTime
  roundType      String
}
